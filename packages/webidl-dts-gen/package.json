    "@types/node": "^14.14.6",
    "@types/webidl2": "^23.13.6",
    "@types/yargs": "^15.0.9",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0"
